= simple_form_for @group, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
      
  %h3 Students
  #students
    = f.simple_fields_for :students do |student|
      = render 'student_fields', :f => student
    = link_to_add_association 'add student', f, :students
      
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), groups_path, :class => 'btn'
