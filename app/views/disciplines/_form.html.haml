= simple_form_for @discipline, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification
  = f.input :name, :class => 'text_field'
  .control-group
    = f.label :teacher_id, :class => 'control-label'
    .controls
      = f.collection_select(:teacher_id, Teacher.all, :id, :name, {:include_blank => true})      
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), disciplines_path, :class => 'btn'
